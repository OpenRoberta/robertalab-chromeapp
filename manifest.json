  "manifest_version": 2,
  
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  },
  "icons": { "128": "OR.png" },
  
  "permissions": [
    "http://10.0.1.1:80/*",
    "http://10.0.1.10/*",
    "http://lab.open-roberta.org/*",
    "http://mp-devel.iais.fraunhofer.de/*",
    "http://mp-public.iaias.fraunhofer.de/*"
  ]
}
